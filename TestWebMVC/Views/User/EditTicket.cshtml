                @Html.EditorFor(model => model.ticket_created_date, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ticket_created_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ticket_assignee, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ticket_assignee, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
